<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.BirActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/aFragment"
                android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.AFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/bFragment"
                android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.BFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

            <FrameLayout
                android:id="@+id/cFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
